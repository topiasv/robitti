;--------------------------------------------------
; Constants for GYRO API's
;--------------------------------------------------
;24 MHz
GYRO_delayqtr:     equ   2            ; Define delays for proper timing at 24 MHz
GYRO_delayhalf:    equ   5
GYRO_delay3qtr:    equ   12

;12 MHz
;GYRO_delayqtr:    equ   3
;GYRO_delayhalf:   equ   3
;GYRO_delay3qtr:   equ   3

GYRO_SDA_pin:      equ   2h ; bit number of for SDA
GYRO_SCL_pin:      equ   1h ; bit number of for SCL
GYRO_I2CPortNum:   equ   1h     ; Port number to use for I2C Both pins will be on this port

GYRO_DriveMode2:   equ   1

;-----------------
; Bank 0
;-----------------
GYRO_I2CPRTDR:     equ   PRT1DR  ; Port number to use for I2C Both pins will be on this port

IF(GYRO_DriveMode2)
GYRO_I2CPRTDM2:                        equ   PRT1DM2  ; Port number to use for I2C Both pins will be on this port
ENDIF

;-----------------
; Bank 1
;-----------------

GYRO_I2CPRTDM0:                        equ   PRT1DM0  ; Port number to use for I2C Both pins will be on this port
GYRO_I2CPRTDM1:                        equ   PRT1DM1  ; Port number to use for I2C Both pins will be on this port

;-----------------
; Misc
;-----------------
GYRO_READ:           equ  0x01 ; Set the R/W flag after the slave address.
GYRO_WRITE:          equ  0x00 ; Clear the R/W flag after the slave address.
GYRO_XFER_ERROR:     equ  0x00 ; Slave did not ACK
GYRO_XFER_COMPLETE:  equ  0x01 ; Returned if Slave did ACK

GYRO_CompleteXfer:   equ  0x00 ; Perform a complete I2C transfer
GYRO_RepStart:       equ  0x01 ; Perform a complete transfer with a Repeat Start
GYRO_NoStop:         equ  0x02 ; Perform a complete transfer, but leave off the stop.

GYRO_NAKslave:       equ  0x00 ; NAK the slave after a read
GYRO_ACKslave:       equ  0x01 ; ACK the slave after a read

