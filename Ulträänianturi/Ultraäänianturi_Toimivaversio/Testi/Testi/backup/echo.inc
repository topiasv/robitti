include "m8c.inc"


;--------------------------------------------------
; Constants for Echo API's.
;--------------------------------------------------

Echo_CONTROL_REG_START_BIT:                equ 0x01    ; Control register start bit
Echo_INT_REG:                              equ 0x0e1
Echo_INT_MASK:                             equ 0x02


;--------------------------------------------------
; Constants for Echo user defined values
;--------------------------------------------------

Echo_PERIOD:                               equ 0x0
Echo_COMPARE_VALUE:                        equ 0x0


;--------------------------------------------------
; Register Address Constants for Echo
;--------------------------------------------------

Echo_COUNTER_LSB_REG:                  equ 0x20   ; DR0 Counter register
Echo_COUNTER_MSB_REG:                  equ 0x24
Echo_PERIOD_LSB_REG:                   equ 0x21   ; DR1 Period register
Echo_PERIOD_MSB_REG:                   equ 0x25
Echo_COMPARE_LSB_REG:                  equ 0x22   ; DR2 CompareValue register
Echo_COMPARE_MSB_REG:                  equ 0x26
Echo_CONTROL_LSB_REG:                  equ 0x23   ; Control register
Echo_CONTROL_MSB_REG:                  equ 0x27
Echo_FUNC_LSB_REG:                     equ 0x20   ; Function register
Echo_FUNC_MSB_REG:                     equ 0x24
Echo_INPUT_LSB_REG:                    equ 0x21   ; Input register
Echo_INPUT_MSB_REG:                    equ 0x25
Echo_OUTPUT_LSB_REG:                   equ 0x22   ; Output register
Echo_OUTPUT_MSB_REG:                   equ 0x26


;--------------------------------------------------
; Echo Macro 'Functions'
;--------------------------------------------------

   macro Echo_Start_M
   or    reg[Echo_CONTROL_LSB_REG],  Echo_CONTROL_REG_START_BIT
   endm

   macro Echo_Stop_M
   and   reg[Echo_CONTROL_LSB_REG], ~Echo_CONTROL_REG_START_BIT
   endm

   macro Echo_EnableInt_M
   M8C_EnableIntMask Echo_INT_REG, Echo_INT_MASK
   endm

   macro Echo_DisableInt_M
   M8C_DisableIntMask Echo_INT_REG, Echo_INT_MASK
   endm


